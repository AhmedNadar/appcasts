!!! 5

%html
  %head
    %title Appcasts
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
    %header
      .row
        .col-md-6
          %h1 AppCasts.io
        .col-md-6.sign-in
          sign in: &nbsp;&nbsp;
          =link_to root_path, class: 'twitter btn' do
            %i.icon-twitter
          =link_to root_path, class: 'github btn' do
            %i.icon-github
          =link_to root_path, class: 'google btn' do
            %i.icon-google-plus

    %section#main
      .row= yield
